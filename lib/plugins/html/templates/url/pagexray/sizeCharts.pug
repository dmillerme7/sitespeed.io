script(type='text/javascript').
  document.addEventListener("DOMContentLoaded", function() {
    var data = {
      labels: !{JSON.stringify(numberOfRequestsLabels)},
      series: [!{JSON.stringify(contentSizeOfRequests)}, !{JSON.stringify(transferSizeOfRequests)}]
    };

    var options = {
      axisY: {
        labelInterpolationFnc: function(value) {
          return value + 'kb';
        }
      },
      plugins: [
          Chartist.plugins.tooltip()
        ]
    };

    var responsiveOptions = [
      ['screen and (max-width: 640px)', {
        seriesBarDistance: 5,
        axisX: {
          labelInterpolationFnc: function (value) {
            return value[0];
          }
        }
      }]
    ];

    var sizeChart = new Chartist.Bar('#ct-size-chart', data, options, responsiveOptions);

  });
